{
  // Use the ESLint flat config.
  "eslint.useFlatConfig": true,

  // Enforce the Prettier formatter.
  "prettier.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Disable auto-fixing using ESLint.
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always"
  },

  // Enable ESLint for all supported languages.
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],

  // Override formatting rules for PHP files.
  "[php]": {
    "editor.defaultFormatter": "open-southeners.laravel-pint",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "intelephense.environment.phpVersion": "8.2",

  // Exclude certain search directories (built files etc.).
  "search.exclude": {
    "**/.ddev/.ddev-docker-compose-base.yaml": true,
    "**/.ddev/.ddev-docker-compose-full.yaml": true,
    "**/.ddev/.homeadditions": true,
    "**/.ddev/.providers": true,
    "**/.ddev/traefik/config": true,
    "**/.git": true,
    ".phpunit.result.cache": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/vendor": true,
    "**/public/build": true,
    "**/public/hot": true,
    "**/bootstrap/cache": true,
    "**/bootstrap/ssr": true,
    "**/resources/js/ziggy.js": true,
    "**/storage/framework": true,
    "**/storybook/storybook-static": true,
    "**/storybook/coverage": true
  }
}
